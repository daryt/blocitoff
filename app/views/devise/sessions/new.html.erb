<h2>Sign in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
<form role="form">
    <div class="col-md-8">
      <div class="form-group">
       <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, class: 'form-control', placeholder: "Enter email", autofocus: true %>
        </div>

      <div class="form-group">
        <%= f.label :password %><br />
        <%= f.password_field :password,class: 'form-control', placeholder: "Enter password", autocomplete: "off" %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>
</br>
  <div><%= f.submit "Sign in", class: 'btn btn-success' %></div></br>
<% end %>

<%= render "devise/shared/links" %>
