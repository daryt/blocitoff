<h1 align="center">My Todos</h1>

<table class="table table-striped table-bordered table-responsive">
  <thead>
    <tr>
      <th>Description</th>
      <th>Days Left</th>
      <th>Edit</th>
      <th>Complete</th>
    </tr>
  </thead>

  <tbody>
    <% @task_items.each do |task_item| %>
      <tr>
        <td><%= task_item.name %></td>
        <td><%= task_item.days_left%></td>
        <td><%= link_to 'Edit', edit_task_item_path(task_item) %></td>
        <td><%= link_to 'Complete', task_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Todo', new_task_item_path %>
